<html>
    <head>
        <title>To Do List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>Welcome to the Task List</h1>

        <form action="/tasks" method="post">
            <label for="description">Task name:   </label>
            <input id="description" name="description" type="text"><br>
            <label for="duedate">Task due by:</label>
            <input id="duedate" name="duedate" type="date">
            <!-- <input id="day" name="day" type="text" placeholder="DD" size="2" maxlength=2><input id="month" name="month" type="text" size="3" placeholder="MM" maxlength=2><input id="year" name="year" type="text" size="5" placeholder="YYYY" maxlength=4><br> -->

            <button type="submit">Add Task</button>
        </form>

        {% if tasks is not empty %}
            <p>Here are all your tasks:</p>
            <ul>
                {% for task in tasks %}
                    <li><a href="/tasks/{{ task.getId }}">{{ task.getDescription }}</a>
                        <p> Due: {{ task.getDuedate }}
                    {% if task.getStatus == 0 %}
                         [Active]
                    {% else %}
                         [Completed]
                    {% endif %}</p>
                    </li>
                {% endfor %}
            </ul>

            <form action='/delete_tasks' method='post'>
                <button type='submit'>Clear</button>
            </form>

        {% else %}
            <p>There are no tasks yet!</p>
        {% endif %}

            <p><a href='/'>Home</a></p>

        </div>
    </body>
</html>
