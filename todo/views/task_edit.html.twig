<html>
    <head>
        <title>To Do List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>To Do List</h1>
        <h3>Update '{{ task.getDescription }}'</h3>
            <form action="/tasks/{{ task.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="new_description">Rename task:</label>
                <input id="new_description" name="new_description" type="text">
                <button type="submit">Update</button>
            </form>

            <form action="/tasks/{{ task.getId }}/newdate" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="new_duedate">Update due date:</label>
                <input id="new_duedate" name="new_duedate" type="text">
                <button type="submit">Update</button>
            </form>

            <form action="/tasks/{{ task.getId }}/delete" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Remove task</button>
            </form>

        </div>

    </body>
</html>
