<html>
    <head>
        <title>To Do List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>Welcome to To Do List</h1>
        <h3>{{ category.getName }}:</h3>

        {% if tasks is not empty %}
            <h5>Here are the tasks for this category.</h5>
            <ol>
            {% for task in tasks %}
                <p>{{ task.getDescription }}</p>
            {% endfor %}
            </ol>
            {% else %}
            <p>You have free time!</p>
            <p>Why not add a task?</p>
        {% endif %}
        <form action="/add_tasks" method="post">
            <label for="description">Select a task</label>
            <input value="{{ category.getId }}" id="category_id" name="category_id" type="hidden">
            <select id="task_id" name="task_id" type="text">
                {% for task in all_tasks %}
                    <option value="{{ task.getId }}"> {{ task.getDescription }} </option>
                {% endfor %}
            </select>
            <button type="submit">Add Task</button>
        </form>

        <form action="/categories/{{ category.getId }}/edit">
            <button type="submit">Edit Category</button>
        </form>

        <p><a href='/'>Home</a></p>

        </div>
    </body>
</html>
